{{$listHundo := ""}}{{$c := 0}}
{{range $data}}{{$c = add $c 1}}{{$h := toInt (.Value)}}
  {{ if gt $h 0}}
  {{ if .User.Username }}
	   {{ if eq $c 1}}
    	 {{- $listHundo = print $listHundo "ğŸ¥‡ " (or (getMember .User.ID).Nick .User.Username) "â€”" .Value "\n" -}}
